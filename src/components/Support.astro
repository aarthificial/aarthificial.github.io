      <path
        d="M16,10c-3.313,0 -6,2.687 -6,6c0,3.313 2.687,6 6,6c3.313,0 6,-2.687 6,-6c0,-3.313 -2.687,-6 -6,-6m0,2c2.206,0 4,1.794 4,4c0,2.206 -1.794,4 -4,4c-2.206,0 -4,-1.794 -4,-4c0,-2.206 1.794,-4 4,-4"
