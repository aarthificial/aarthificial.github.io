      <path
        d="M11.1,22.32l-2.39,2.39l-1.42,-1.42l2.39,-2.39c0.41,0.53 0.89,1.01 1.42,1.42"
        class="secondary"></path>
      <path
        d="M24.71,8.71l-2.39,2.39c-0.41,-0.53 -0.89,-1.01 -1.42,-1.42l2.39,-2.39l1.42,1.42Z"
        class="secondary"></path>
